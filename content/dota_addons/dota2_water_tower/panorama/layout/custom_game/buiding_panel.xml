<root>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="file://{resources}/styles/custom_game/building_panel.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/building_panel.js" />
    </scripts>
    <script>
        // sadly js in dota2 do not support 'let' keyword yet.
        //   seems hard to define the right local variable.
        //   all the local variable in loop with same name refers to the last defined one.
        $.Msg("building panel loaded");
    </script>
    <Panel>
        <Panel id="building_panel_container" class="building-panel-container">
            <Panel class="building-panel-row">
                <Button id="btn1" class="ability-button"
                    onmouseout="$.DispatchEvent('DOTAHideTextTooltip')"
                    onmouseover="$.DispatchEvent('DOTAShowTextTooltip', $('#btn1'), 'build_ranger_first_stage')"
                    onmouseactivate="Cast('build_ranger_first_stage')">
                    <DOTAHeroImage heroname="nevermore"/>
                </Button>
                <Button id="btn2" class="ability-button"
                    onmouseout="$.DispatchEvent('DOTAHideTextTooltip')"
                    onmouseover="$.DispatchEvent('DOTAShowTextTooltip', $('#btn1'), 'build_ranger_middle_stage')"
                    onmouseactivate="Cast('ranger_middle_stage')">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="btn3" class="ability-button"
                    onmouseout="$.DispatchEvent('DOTAHideTextTooltip')"
                    onmouseover="$.DispatchEvent('DOTAShowTextTooltip', $('#btn1'), 'build_ranger_final_stage')"
                    onmouseactivate="Cast('ranger_final_stage')">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
            </Panel>
            <Panel class="building-panel-row">
                <Button id="btn4" class="ability-button"
                    onmouseout="$.DispatchEvent('DOTAHideTextTooltip')"
                    onmouseover="$.DispatchEvent('DOTAShowTextTooltip', $('#btn4'), 'build_ranger_middle_stage')"
                    onmouseactivate="Cast('build_ranger_middle_stage')">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="btn5" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="btn6" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
            </Panel>
            <Panel class="building-panel-row">
                <Button id="btn7" class="ability-button"
                    onmouseout="$.DispatchEvent('DOTAHideTextTooltip')"
                    onmouseover="$.DispatchEvent('DOTAShowTextTooltip', $('#btn7'), 'build_ranger_final_stage')"
                    onmouseactivate="Cast('build_ranger_final_stage')">
                    <DOTAHeroImage heroname="mirana"/>
                </Button>
                <Button id="btn8" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="btn9" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
            </Panel>
        </Panel>
    </Panel>
</root>