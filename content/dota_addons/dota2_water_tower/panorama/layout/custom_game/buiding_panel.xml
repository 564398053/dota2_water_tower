                </Button>
                <Button id="button_4" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="button_5" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
            </Panel>
            <Panel class="building-panel-row">
                <Button id="button_6" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="button_7" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="button_8" class="ability-button">
