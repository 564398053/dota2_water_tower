<root>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="file://{resources}/styles/custom_game/building_panel.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/building_panel.js" />
    </scripts>
    <script>
        // sadly dota2 do not support let keyword. we need a wrapper function to limit the variable scope.
        (function () {
            // set tooltips
            unitNames = new Array("ranger_first_stage", "ranger_middle_stage", "ranger_final_stage",
                            "unset", "unset", "unset",
                            "unset", "unset", "ranger_first_stage");
            for(i = 0; i < 9; ++i) {
                btn = $("#button_" + i);
                unitName = unitNames[i];
                tooltip = "#tooltip_build_" + unitName;
                $("#button_" + i).SetPanelEvent(
                    "onmouseover",
                    function() { $.DispatchEvent("DOTAShowTextTooltip", btn, tooltip); }
                );
                $("#button_" + i).SetPanelEvent(
                    "onmouseout",
                    function() { $.DispatchEvent("DOTAHideTextTooltip"); }
                );
                $("#button_" + i).SetPanelEvent(
                    "onmouseactivate",
                    function() { BuildUnit(unitName); }
                );
            }
        })();
    </script>
    <Panel>
        <Panel id="building_panel_container" class="building-panel-container">
            <Panel class="building-panel-row">
                <Button id="button_0" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="button_1" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
                <Button id="button_2" class="ability-button">
                    <DOTAHeroImage heroname="npc_dota_hero_nevermore"/>
                </Button>
            </Panel>
            <Panel class="building-panel-row">
                <Button id="button_3" class="ability-button">
