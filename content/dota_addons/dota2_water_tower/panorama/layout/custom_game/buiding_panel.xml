<root>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="file://{resources}/styles/custom_game/building_panel.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/building_panel.js" />
    </scripts>
    <script>
        $("#build_button_1").SetPanelEvent(
            "onmouseover",
            function(){
                $.Msg( "Panorama onmouseover!" );
                $.DispatchEvent("DOTAShowAbilityTooltip", "build_ranger_first_stage");
            }
        );
        $("#build_button_1").SetPanelEvent(
            "onmouseout",
            function(){
                $.Msg( "Panorama onmouseout!" );
                $.DispatchEvent("DOTAHideAbilityTooltip");
            }
        );
    </script>
    <Panel>
        <!-- (Panel hierarchy goes here.) -->
        <Label text="#DOTA_Tooltip_Ability_build_ranger_first_stage" />
        <Panel id="building_panel" class="building-panel building-panel--hide">
            <Label text="啦啦啦" />
            <Button class="button-size">
                <DOTAHeroImage id="build_button_1" heroimagestyle="portrait" heroname="npc_dota_hero_windrunner" onmouseactivate="BuildUnit('ranger_first_stage')" />
            </Button>
        </Panel>
    </Panel>
</root>